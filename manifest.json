
{
  "manifest_version": 3,
  "name": "Video Downloader",
  "version": "1.0",
  "description": "A simple extension to download videos from any website",
  "icons": {
    "48": "icons_icon_48.png" 
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "48": "icons_icon_48.png" 
    },
    "default_popup": "html/popup.html",
    "default_title": "Download Video"
  },
  "permissions": [
    "downloads"
  ],
  "host_permissions": [
    "*://youtube.com/*",
    "*://netflix.com/*"
  ]
 }
